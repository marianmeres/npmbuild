{
  "name": "@marianmeres/npmbuild",
  "version": "1.9.1",
  "exports": "./npm-build.ts",
  "tasks": {
    "release": "deno run -A jsr:@marianmeres/deno-release",
    "rp": "deno task release -y && deno publish",
    "rpm": "deno task release -y minor && deno publish"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 90,
    "indentWidth": 4,
    "proseWrap": "preserve"
  }
}
